include ../mixins/message

doctype html
html
    head
        script(src="https://kit.fontawesome.com/eea331999a.js", crossorigin="anonymous")
        title #{pageTitle} | #{siteName}
        link(rel='stylesheet', href='/static/styles.css')
    body
        if messages.error
            +message({
                type: 'error',
                text: messages.error,
            })
        else if messages.info
            +message({
                type: 'info',
                text: messages.info,
            })
        else if messages.success
            +message({
                type: 'success',
                text: messages.success,
            })
        include ../patials/header
        main
            block content
        include ../patials/footer
        script(src='/static/main.js')